<?xml version="1.0" encoding="utf-8"?>
<layout scroll="none" light="normal:#000000;color:#00ffff" dark="normal:#000000;color:#00ffff">
	<row>
		<label light="color:#ffffff" dark="color:#ffffff" id="info" text="Tap to launch Tidal" ontap="launch" />
	</row>
	<row>
		<button icon="vdown" ontap="volume_down" />
		<button icon="vmute" ontap="volume_mute" />
		<button icon="vup" ontap="volume_up" />
	</row>
	<row>
		<button icon="previous" ontap="previous" />
		<button icon="playpause" ontap="play_pause" />
		<button icon="next" ontap="next" />
	</row>
	<row>
		<button icon="repeat" ontap="toggle_repeat" />
		<button icon="shuffle" ontap="toggle_shuffle" />
	</row>
</layout>